    <button class="topBtn"><i class="fas fa-arrow-up"></i></button>

    <h2 id="cadastro">Cadastre-se</h2>
    <section class="cadastro">
        <form method="POST" class="box_cad" action="Cadastro/Cadastrar">
        <div id="cdivona">
            <div id="c1">
                <label for="nome">Nome Completo : </label>
                <input type="text" name="nome"  required>
                <label for="email">E-mail :</label>
                <input type="email" name="email" required>
                <label for="senha">Senha :</label>
                <input type="password" name="senha" required>
            </div>
            <div id="c2">
                <label for="data">Data de nascimento :</label>
                <input type="date" name="data" id="datanascimento" required>
                <label for="plano">Plano :</label>
                <select id="plano" name="plano" required>
                <option value="" disabled selected>Selecione</option>
                    @foreach(var plano in Model.Planos){
                        <option value=@plano.Nome>@plano.Nome</option>
                    }
                </select>
                <input type="submit" name="" value="Cadastre-se">
                <a href="#" class="log">Já tem uma conta? Faça login!</a>
            </div>
        </div>
        </form>
    </section>

    <section class="quem_somos" id="quem_somos">
        <h2>Quem somos</h2>
        <div class="quem_somos_content">
