    @if (string.IsNullOrEmpty(user))
    {
        <h2 id="reclamalogin">Faça Login para contatar-nos!</h2>
    }else
    {
        <section class="contact_form" id="fale_conosco">
        <h2>Fale Conosco!</h2>
        <div class="contact_form_content">
            <form method="POST">
                <div class="txtb">
                    <label> Mensagem :</label>
                    <textarea maxlength="300" name="mensagem"></textarea>
                    <input type="file" name="foto">
                </div>
                <input type="submit" value="Enviar" class="formBtn">
            </form>
        </div>
        </section>
    }
    
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.0656932253614!2d-46.65298398507052!3d-23.56608398468064!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce59c8da0aa315%3A0xd59f9431f2c9776a!2sAv.+Paulista+-+Bela+Vista%2C+S%C3%A3o+Paulo+-+SP!5e0!3m2!1spt-BR!2sbr!4v1552311784381" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
